{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",
    "lib": ["es2022"],

    /* Modules */
    "module": "es2022",
    "moduleResolution": "node",
    "checkJs": true,

    /* Emit */
    "noEmit": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
